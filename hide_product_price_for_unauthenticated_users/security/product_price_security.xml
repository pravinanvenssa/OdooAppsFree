<!-- security/product_price_security.xml -->
<odoo>
    <!-- Field Access Rule: Hide Product Prices from Regular Users -->
    <record id="hide_product_price_rule" model="ir.rule">
        <field name="name">Hide Product Prices from Regular Users</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="domain_force">[(1, '=', 1)]</field> <!-- Apply to all records -->
        <field name="groups" eval="[(4, ref('base.group_user'))]"/> <!-- Applies to regular users -->
    </record>
</odoo>
