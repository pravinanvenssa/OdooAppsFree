<!-- views/product_template_views.xml -->
<odoo>
    <!-- Inherit the product.template form view and hide list_price and standard_price for regular users -->
    <record id="product_template_form_hide_price" model="ir.ui.view">
        <field name="name">product.template.form.hide.price</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='list_price']" position="attributes">
                <attribute name="groups">base.group_system</attribute>
            </xpath>
            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="groups">base.group_system</attribute>
            </xpath>
        </field>
    </record>

    <!-- Inherit the product.template tree view and hide list_price for regular users -->
    <record id="product_template_tree_hide_price" model="ir.ui.view">
        <field name="name">product.template.tree.hide.price</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='list_price']" position="attributes">
                <attribute name="groups">base.group_system</attribute>
            </xpath>
            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="groups">base.group_system</attribute>
            </xpath>
        </field>
    </record>
</odoo>
